function prepareAndDraw( )
    [x,y] = meshgrid(-10:20/63:10);
    R = zeros(1000, 64, 64);
    for t=0:2e-2:(10-2e-2)
       R(ceil(t/(2e-2)+0.1),:,:) = cos(sqrt((x).^2+(y).^2)-t); 
    end
    h=mesh(x,y,squeeze(R(1,:,:)));
    set(h,'EraseMode','xor','MarkerSize',18);
    for i=1:500
        drawnow
        set(h,'ZData',squeeze(R(i,:,:)));
    end
end

